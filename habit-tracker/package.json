{
  "name": "daily-habit-tracker",
  "version": "1.0.0",
  "description": "Daily habit tracking app with Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "npm run build:client && npm run build:worker",
    "build:client": "vite build",
    "build:worker": "esbuild src/worker.js --bundle --format=esm --outfile=dist/worker.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "esbuild": "^0.19.0",
    "vite": "^4.4.5",
    "wrangler": "^3.0.0"
  }
}